<div class="user_details">
    <%= render 'shared/user_details'%>
</div>
<div class="post_data">
    <% @posts.each do |post|%>
            <div class="post_head">
                <h3><%= link_to post.title, user_post_path(@user.id, post) %></h3>
                <div class="post_body">
                  <p><%= post.text %></p>
                  <div class="numbers">
                    <span>
                      Comments: <%=post.comments_count ? post.comments_count : 0%>
                    </span>
                    <span>
                      Likes: <%=post.likes_count ? post.likes_count : 0%>
                    </span>
                  </div>
                </div>
                <div class="comment_info">
                    <% if post.comments.empty? %>
                        <p>0 comment</p>
                    <% else %>
                        <% post.last_five_comments.each do |comment| %>
                            <p>~> <span><%= comment.user.name %></span>: <%= comment.text %></p>
                        <% end %>
                    <% end %>
                </div>
            </div>      
    <% end %>
</div>
