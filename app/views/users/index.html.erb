<h1>All Blogg_Rs</h1>
<div>
    <% @users.each do |user| %>
        <div class="user_info">
            <div class="img">
              <%= image_tag user.photo, size: "90x70", alt: "Edit Entry" if user.photo%>
            </div>
            <div class="contents">
                <h3><%= link_to user.name, user %></h3>
                <span>Number of posts: <%= user.posts_count ? user.posts_count : 0 %></span>
            </div>
        </div>
    <% end %>
</div>